<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17" fx:controller="gui.CalculatorViewController">
   <children>
      <Label layoutX="35.0" layoutY="44.0" text="Sum Calculator">
         <font>
            <Font name="Arial Black" size="18.0" />
