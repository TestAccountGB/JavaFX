         <font>
            <Font name="Arial Black" size="18.0" />
         </font>
      </Label>
      <Label fx:id="label" layoutX="111.0" layoutY="335.0" textFill="RED">
         <font>
            <Font name="Arial Black" size="13.0" />
         </font>
      </Label>
      <Button layoutX="76.0" layoutY="268.0" mnemonicParsing="false" onAction="#onActionButtonSum" text="Sum">
         <font>
            <Font name="Arial Black" size="12.0" />
         </font>
      </Button>
   </children>
